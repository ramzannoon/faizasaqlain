<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_workorder_bnh" model="ir.ui.view">
        <field name="name">mrp.workorder.order.tree</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view"/>
        <field name="arch" type="xml">
            <field name="duration" position="after">
                <field name="employee_id" invisible='1'/>
                <field name="date_planned_start"/>
                <field name="date_planned_finished"/>
            </field>
        </field>
    </record>

    <record id="mrp_production_timesheet_nov_form" model="ir.ui.view">
        <field name="name">mrp_workorder_order_form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='user_id']" position="after">
                <field name="employee_id" invisible='1' />
                <field name="test_timesheet" />
            </xpath>
        </field>
    </record>

</odoo>
