<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_productivity_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.tree.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp.oee_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='date_start']" position="before">
                <field name="workingorder_id"/>
                <field name="workorder_id"/>
                <field name="employee_id"/>
                <!--                <field name="duration_in_hours"/>-->
                <field name="state"/>
                <field name="status"/>
            </xpath>

            <xpath expr="//tree/field[@name='date_end']" position="after">
                <field name="actual_cost"/>
                <field name="duration_in_hours"/>
            </xpath>

            <xpath expr="//tree/field[@name='workcenter_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//tree/field[@name='duration']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='loss_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="search_view_work_center" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.search.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp.oee_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="/search/filter" position="after">
                <field name="workingorder_id"/>
                <field name="employee_id"/>
                <field name="production_ids"/>
                
                <group expand="0" string="Group By">
                    <filter string="Work Order" name="group_workingorder_id" context="{'group_by':'workingorder_id'}"/>
                    <filter string="MRP" name="group_production_ids" context="{'group_by':'production_ids'}"/>
                    <filter string="Partner" name="group_employee_id" context="{'group_by':'employee_id'}"/>
                </group>
                
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_time_sheet_mine">
        <field name="name">Time Sheets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="context">{'search_default_group_production_ids': 1, 'search_default_group_workingorder_id': 1, 'search_default_group_employee_id': 1}
        </field>
        <field name="res_model">mrp.workcenter.productivity</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
