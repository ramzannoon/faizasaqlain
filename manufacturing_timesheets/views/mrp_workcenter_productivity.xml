<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_productivity_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.tree.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp.oee_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='user_id']" position="after">
                <field name="duration_in_hours"/>
                <!--                 <field name="worked_hours"/>-->
                <field name="employee_id"/>
                <field name="workorder_id"/>
                <field name="workingorder_id"/>
                <field name="state"/>
            </xpath>

<!--            <xpath expr="//tree/field[@name='workcenter_id']" position="after">-->
<!--                <field name="date"/>-->
<!--            </xpath>-->

            <xpath expr="//tree/field[@name='workcenter_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//tree/field[@name='duration']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='loss_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

