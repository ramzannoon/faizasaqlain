    <record id="search_view_work_center" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.search.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp.oee_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="/search/filter" position="after">
                <field name="workingorder_id"/>
                <field name="workingorder_id"/>
                <group expand="0" string="Group By">
                    <filter string="Work Order" name="group_workingorder_id" context="{'group_by':'workingorder_id'}"/>
                    <filter string="MRP" name="group_workingorder_id" context="{'group_by':'workingorder_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>