<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_batch_slip_wizard_form" model="ir.ui.view">
            <field name="name">batch.slip.report.form</field>
            <field name="model">batch.slip.report</field>
            <field name="arch" type="xml">
                <form string="Batch Slip Wizard">
                     <h5>By-Default All Employee Belongs to Selected company printed in Report.
                        But If you want to print only specific  Employee than Add those specific Employee 
                        in Below Employee Table.</h5>
                    <group>
                      <group>
                          <field name="date_from" />    
                          <field name="company_id"  options="{'no_create': True, 'no_create_edit':True}" />                          
                      </group>
                      <group>
                          <field name="date_to" />                        
                      </group>                       
                   </group>
                     <notebook>
                        <page string="Employees">
                            <field name="employee_ids">
                                <tree editable="bottom">
                                    <field name="id" invisible="1"/>
                                    <field name="name" />
                                    <field name="department_id" /> 
                                    <field name="company_id" />                                    
                                </tree>
                            </field>
                        </page>
                     </notebook>

                   <footer>
                      <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                      <button string="Cancel" class="btn-default" special="cancel"/>
                   </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_batch_slip_wizard_action" model="ir.actions.act_window">
            <field name="name">Salary Sheet</field>
            <field name="res_model">batch.slip.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_batch_slip_wizard_form"/>
        </record> 
    
    
       <menuitem
        id="batch_slip_wizard_menuitem"
        name="Salary Sheet Detail"
        parent="hr_payroll.menu_hr_payroll_report"
        sequence="11"
        action="de_hr_payroll_policy.open_batch_slip_wizard_action"
    />


</odoo>