<odoo>
    <data>
          
         <record id="mail_template_employee_birth_day" model="mail.template">
            <field name="name">Happy Birth Day</field>
            <field name="model_id" ref="de_hr_payroll_policy.model_hr_employee"/>
            <field name="subject">${object.name.name}: Happy Birth Day</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx.get('employee_to_name', 'employee')},
                        <br/><br/>
                        This System Generated Happy Birth Day Notification 
                        <br/>
                        <br/>
                        This is system generated email, Kindly do not reply.                        
                        <tr><td style="padding:15px 20px 10px 20px;">${(object.signature or '')| safe}</td></tr>
                    </p>
                </div>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        
