<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="users_pos_cron" model="ir.cron">
        <field name="name">users_summary_cron</field>
        <field name="model_id" ref="model_users_pos_order"/>
        <field name="state">code</field>
        <field name="code">model.users_pos_records()</field>
        <!--        <field name="user_id" ref="base.user_root"/>-->
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="users_pos_search" model="ir.ui.view">
        <field name="name">users.pos.order.search</field>
        <field name="model">users.pos.order</field>
        <field name="arch" type="xml">
<!--            <search>-->
<!--                <field name="name"/>-->
<!--                <field name="user_id"/>-->
<!--                <field name="cashier"/>-->
<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="User" name="group_user_id" context="{'group_by':'user_id'}"/>-->
<!--                </group>-->
<!--            </search>-->

            <search string="User Summary">
                <field name="user_id" string="Users"/>
                <group expand="0" string="Group By">
                    <filter string="Users" name="group_user" context="{'group_by':'user_id'}"/>
                </group>
            </search>

        </field>
    </record>

    <record id="view_users_pos_tree" model="ir.ui.view">
        <field name="name">users.pos.order.tree</field>
        <field name="model">users.pos.order</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="user_id" invisible="1"/>
            </tree>
            <!--                <field name="company" string="Company"/>-->
            <!--                <field name="price_unit" string="Price"/>-->
        </field>
    </record>

    <record id="view_users_pos_action" model="ir.actions.act_window">
        <field name="name">Users Summary</field>
        <field name="res_model">users.pos.order</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_user': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>


