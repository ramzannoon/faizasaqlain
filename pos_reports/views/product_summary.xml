<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="product_summary_cron" model="ir.cron">
        <field name="name">product_summary_cron</field>
        <field name="model_id" ref="model_pos_product_summary"/>
        <field name="state">code</field>
        <field name="code">model.pos_records()</field>
        <!--        <field name="user_id" ref="base.user_root"/>-->
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>


    <record id="product_pos_search" model="ir.ui.view">
        <field name="name">pos.product.summary.search</field>
        <field name="model">pos.product.summary</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_product_name"/>
                <field name="qty"/>
                <field name="order_date"/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="group_full_product_name" context="{'group_by':'full_product_name'}"/>
                    <filter string="Date" name="group_order_date" context="{'group_by':'order_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_product_summary_tree" model="ir.ui.view">
        <field name="name">pos.product.summary.tree</field>
        <field name="model">pos.product.summary</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="full_product_name" string="Product Name"/>
                <field name="qty" string="Quantity"/>
                <field name="order_date" string="Order Date"/>
                <field name="company" string="Company"/>
                <field name="price_unit" string="Price"/>
                <field name="pos_order_id" string="order" invisible="1"/>
                <field name="unique_id" string="ID" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_product_summary_action" model="ir.actions.act_window">
        <field name="name">Product Summary</field>
        <field name="res_model">pos.product.summary</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_full_product_name': 1,'search_default_group_order_date': 1}</field>

        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>


    <menuitem
            id="menu_customer_summary_reports"
            name="Product Summary"
            parent="menu_on_screen_reports"
            action="view_product_summary_action"
            sequence="20"/>

</odoo>