    <record id="category_pos_search" model="ir.ui.view">
        <field name="name">category.pos.order.search</field>
        <field name="model">category.pos.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="category_id"/>
                <field name="full_product_name"/>
                <field name="qty"/>
                <field name="order_date"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category_id" context="{'group_by':'category_id'}"/>
                    <filter string="Date" name="group_order_date" context="{'group_by':'order_date'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="view_category_pos_tree" model="ir.ui.view">
        <field name="name">category.pos.order.tree</field>
        <field name="model">category.pos.order</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="category_id"/>
                <field name="full_product_name"/>
                <field name="qty"/>
                <field name="order_date"/>
            </tree>
        </field>
    </record>

    <record id="view_category_pos_action" model="ir.actions.act_window">
        <field name="name">Category Summary</field>
        <field name="res_model">category.pos.order</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_category_id': 1,'search_default_group_order_date': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <menuitem
            id="menu_category_summary_reports"
            name="Category Summary"
            parent="menu_on_screen_reports"
            action="view_category_pos_action"
            sequence="34"/>

</odoo>