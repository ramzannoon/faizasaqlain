    <record id="view_test_pos_company_analysis_action_two" model="ir.actions.act_window">
        <field name="name">Product Summary</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product.product_product_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Product Summary</p>
        </field>
    </record>

    <record id="view_sale_summary_action" model="ir.actions.act_window">
        <field name="name">Sale Summary</field>
        <field name="res_model">pos.order</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Add Sale Summary</p>
        </field>
    </record>

    <menuitem
            id="menu_customer_summary_reports"
            name="Product Summary"
            parent="menu_on_screen_reports"
            action="view_test_pos_company_analysis_action_two"
            sequence="20"/>

    <menuitem
