<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_customer_summary_tree" model="ir.ui.view">
        <field name="name">customer.summary.tree</field>
        <field name="model">customer.summary</field>
        <field name="arch" type="xml">
            <tree string="Board">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_summary_form" model="ir.ui.view">
        <field name="name">customer.summary.form</field>
        <field name="model">customer.summary</field>
        <field name="arch" type="xml">
            <form string="Board">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_summary_action" model="ir.actions.act_window">
        <field name="name">Customer Summary Reports</field>
        <field name="res_model">customer.summary</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the Customer Summary Reports here.
            </p>
        </field>
    </record>

