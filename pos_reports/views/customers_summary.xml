<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customers_summary_cron" model="ir.cron">
        <field name="name">customers_summary_cron</field>
        <field name="model_id" ref="model_customers_pos_order"/>
        <field name="state">code</field>
        <field name="code">model.customers_records()</field>
        <!--        <field name="user_id" ref="base.user_root"/>-->
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="customers_pos_search" model="ir.ui.view">
        <field name="name">customers.pos.order.search</field>
        <field name="model">customers.pos.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner_id" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_customers_summary_pos_tree" model="ir.ui.view">
        <field name="name">customers.pos.order.tree</field>
        <field name="model">customers.pos.order</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_customers_summary_pos_action" model="ir.actions.act_window">
        <field name="name">Customers Summary</field>
        <field name="res_model">customers.pos.order</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_name': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <menuitem
            id="menu_customers_summary_reports"
            name="Customers Summary"
            parent="menu_on_screen_reports"
            action="view_customers_summary_pos_action"
            sequence="40"/>

</odoo>