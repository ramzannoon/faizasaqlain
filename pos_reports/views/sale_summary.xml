<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="session_summary_cron" model="ir.cron">
        <field name="name">session_summary_cron</field>
        <field name="model_id" ref="model_session_pos_order"/>
        <field name="state">code</field>
        <field name="code">model.sale_pos_records()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="session_pos_search" model="ir.ui.view">
        <field name="name">session.pos.order.search</field>
        <field name="model">session.pos.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_date"/>
                <group expand="0" string="Group By">
                    <filter string="Date" name="group_order_date" context="{'group_by':'order_date'}"/>
                    <filter string="company" name="group_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>


        </field>
    </record>

    <record id="view_session_pos_tree" model="ir.ui.view">
        <field name="name">session.pos.order.tree</field>
        <field name="model">session.pos.order</field>
        <field name="arch" type="xml">
            <tree create="false">
                <!--                <field name="full_product_name" string="Product Name"/>-->
                <field name="name"/>
                <field name="company_id"/>
                <field name="order_date" string="Date"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record id="view_session_pos_action" model="ir.actions.act_window">
        <field name="name">Sale Summary</field>
        <field name="res_model">session.pos.order</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_order_date': 1,'search_default_group_company': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>


    <!--    <menuitem-->
    <!--            id="menu_session_reports"-->
    <!--            name="Sale Summary"-->
    <!--            parent="menu_on_screen_reports"-->
    <!--            action="view_session_pos_action"-->
    <!--           />-->

    <menuitem
            id="menu_sale_summary_reports"
            name="Sale Summary"
            parent="menu_on_screen_reports"
            action="view_session_pos_action"
            sequence="24"/>

</odoo>