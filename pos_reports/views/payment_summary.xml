<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_pos_cron" model="ir.cron">
        <field name="name">payment_summary_cron</field>
        <field name="model_id" ref="model_payment_pos_order"/>
        <field name="state">code</field>
        <field name="code">model.payment_pos_records()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="payment_pos_search" model="ir.ui.view">
        <field name="name">payment.pos.order.search</field>
        <field name="model">payment.pos.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="payment" string="Payment"/>
                <field name="company" string="Company"/>
                <field name="amount" string="Price"/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="group_payment" context="{'group_by':'payment'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_payment_summary_pos_tree" model="ir.ui.view">
        <field name="name">payment.pos.order.tree</field>
        <field name="model">payment.pos.order</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="payment" string="Payment"/>
                <field name="company" string="Company"/>
                <field name="amount" string="Price"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_summary_pos_action" model="ir.actions.act_window">
        <field name="name">Payment Summary</field>
        <field name="res_model">payment.pos.order</field>
        <field name="view_mode">tree</field>
         <field name="context">{'search_default_group_payment': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <menuitem
            id="menu_payment_summary_reports"
            name="Payment Summary"
            parent="menu_on_screen_reports"
            action="view_payment_summary_pos_action"
            sequence="45"/>

</odoo>