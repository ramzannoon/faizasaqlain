<odoo>

    <record id="view_product_year_form" model="ir.ui.view">
        <field name="name">product.year.form</field>
        <field name="model">product.year</field>
        <field name="arch" type="xml">
            <form string="Season">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_product_year_tree" model="ir.ui.view">
        <field name="name">product.year.tree</field>
        <field name="model">product.year</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_product_year_search" model="ir.ui.view">
        <field name="name">product.year.search</field>
        <field name="model">product.year</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!--  Main Actions-->

    <record id="action_product_year_view" model="ir.actions.act_window">
        <field name="name">Year</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.year</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_year_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found. Let's Create..........
            </p>
        </field>
    </record>

    <!--  Main Menus-->

    <menuitem id="menu_product_year"
              name="Year"
              parent="stock.menu_stock_config_settings"
              action="action_product_year_view"
    />

</odoo>