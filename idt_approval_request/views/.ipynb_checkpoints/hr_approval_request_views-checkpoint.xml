<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    
    
    

    <!--Loan Tree view-->
    <menuitem name="Approvals"
        groups="idt_approval_request.group_approval_request_admin,idt_approval_request.group_approval_request_user"      
        parent="hr.menu_hr_root"
        id="menu_base_hr_approvals_req"
        />
    
    <record id="hr_approval_category_tree_view" model="ir.ui.view">
        <field name="name">category.approval.tree</field>
        <field name="model">category.approval</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="advance_hr_approval_category_form_view" model="ir.ui.view">
        <field name="name">category.approval.form</field>
        <field name="model">category.approval</field>
        <field name="arch" type="xml">
            <form string="HR Approvals">
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="0"/>
                        </h1>
                    </div>
                    <group >
                        <group>
                           <field name="company_id"/>
                          
                        </group>
                        <group>
                           <field name="is_attendance_rectify"/>
                           <field name="is_advance_against"/>
                        </group>
                        
                    </group>
                    <notebook> 
                        <page string='Approvers'>
                            <field name='approver_ids'>
                                <tree editable='bottom'>
                                     <field name="user_type" />
                                     <field name="user_id"  attrs="{'invisible':[('user_type','!=','custom')]}" />
                                </tree>
                            </field>
                        </page>                    
                    </notebook>
                   
                    
                </sheet>
                
            </form>
        </field>
    </record>
    
    
    
    
    
    <record id="action_hr_approval_categ" model="ir.actions.act_window">
        <field name="name">Approval Category</field>
        <field name="res_model">category.approval</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Approval Category.
            </p><p>
                Use this menu to create Approval Category.
            </p>
        </field>
    </record>

    
    <menuitem name="Category"
        parent="menu_base_hr_approvals_req"
        id="menu_base_hr_approvals_categ"
        action="action_hr_approval_categ"/> 
    
    
    
    
    
    <record id="hr_approval_request_tree_view" model="ir.ui.view">
        <field name="name">hr.approval.request.tree</field>
        <field name="model">hr.approval.request</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="advance_hr_approval_request_form_view" model="ir.ui.view">
        <field name="name">hr.approval.request.form</field>
        <field name="model">hr.approval.request</field>
        <field name="arch" type="xml">
            <form string="HR Approvals">
                <header>

                    <button name="action_submit" type="object" string="Submit" states="new" class="oe_highlight"/>
                    <button name="action_approve" type="object" string="Approve" states="pending" class="oe_highlight" />
                    <button name="action_refuse" type="object" string="Refuse" states="pending" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="new,pending,approved" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group >
                        <group>
                           <field name="date"  attrs="{'readonly':[('state','!=','new')]}"/>
                           <field name="company_id" attrs="{'readonly':[('state','!=','new')]}"/> 
                        </group>
                        <group>
                           <field name="user_id"  attrs="{'readonly':[('state','!=','new')]}"/> 
                           <field name="category_id"  invisible='1' /> 
                           <field name="description" attrs="{'readonly':[('state','!=','new')]}"/>
                           <field name="model_id" invisible='1' />
                           <field name="record_id" invisible='1' />  
                        </group>
                        
                    </group>
                    <notebook> 
                        <page string='Approvers'>
                            <field name='approver_ids'>
                                <tree editable='bottom'>
                                     <field name="user_id" />
                                     <field name="user_status" />
                                </tree>
                            </field>
                        </page>                    
                    </notebook>
                   
                    
                </sheet>
                
            </form>
        </field>
    </record>
    
    
    
    
    
    <record id="action_hr_approval_request" model="ir.actions.act_window">
        <field name="name">Approval Request</field>
        <field name="res_model">hr.approval.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Approval Request.
            </p><p>
                Use this menu to create Approval Request.
            </p>
        </field>
    </record>
    
    
    <menuitem name="Request"
        parent="menu_base_hr_approvals_req"
        id="menu_base_hr_approvals_request"
        action="action_hr_approval_request"/>
    
    
   
</odoo>
